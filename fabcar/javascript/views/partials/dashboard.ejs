<% if (details.allDevices) { %>

<div class="container blue" id="main-content">
    <div class="row">
        <% details.allDevices.forEach(function(device){%>
        <div class="col s12 m6">
            <div class="card blue lighten-2">
                <div class="card-image  waves-effect waves-block waves-light">
                    <img class="activator" src="/views/images/TemperatureSensing.jpg">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4 " style="font-size: medium;"><i
                            class="material-icons right">more_vert</i>Device ID:
                        <%= device.PiId %></span>
                    <span class="card-title activator grey-text text-darken-4 " style="font-size: medium;">Owner:
                        <%= device.Owner %></span>
                    <p><%= device.Description %></p>
                </div>
                <div class="card-action">
                    <% if (details.user) {%>
                    <div class="row">
                        <% if (details.user.name!==device.Owner){%>
                        <button class=" col6 s12 blue btn waves-effect waves-light" onClick="buyDeviceNotify('<%= details.user.name%>','<%= device.Owner%>','<%= device.PiId%>')">Buy This Device
                        </button>
                        <% } %>
                        <button class="col6 s12 blue btn waves-effect waves-light" onClick="getDataNotify('<%= details.user.name%>','<%= device.Owner%>','<%= device.PiId%>')">Get Data
                        </button>

                    </div>
                    <%} else{%>
                    <p>Login To Buy or get data of a device</p>
                    <%}%>

                    <!-- <a href="#" onclick="myFunction('<%= device.PiId %>')">This is a link</a> -->
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4" style="font-size: medium;"><%= device.PiId %><i
                            class="material-icons right">close</i></span>
                    <p style="color: black;"><%= device.Description %></p>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>
<% } %>

